pipeline {
    agent any
    stages {
        stage('Stage 1: Compile C Code') {
            steps {
                sh 'gcc -o myprogram myprogram.c'
            }
        }
        stage('Stage 2: Run C Code') {
            steps {
                sh './*'
            }
        }
        stage('Stage 3: Document Update') {
            steps {
                bat 'echo "Updated on $(date)" >> components.docx'
            }
        }
        stage('Stage Final: Build Success') {
            steps {
                echo "Build Success!"
            }
        }
    }
}










